{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "TimeGlyd",
    "version": "0.0.0-alpha6"
  },
  "tauri": {
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/icon.png"
    },
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "open": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["$APPCONFIG", "$APPCONFIG/*"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.jaikanthj.timeglyd",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://gist.githubusercontent.com/jaikanthjay46/48afb03523c8e7fdb8ed22aad40f49e9/raw"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0MDk5MTQ0NTFEMjMzNUYKUldSZk05SlJSSkVKUkQ0RlFSRVhESHhycGYyMVVMTUM2TThncENTUFVHQ1ZnV0hBaElwbkMxQWoK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "width": 360,
        "resizable": false,
        "visible": false,
        "decorations": true,
        "center": true
      }
    ]
  }
}
